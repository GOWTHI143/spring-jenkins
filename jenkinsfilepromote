pipeline {
    agent {label 'MVN' }
    triggers{ cron('* 17 * * *') }
    stages {
        stage ('vcs') { 
            steps {
                git url : 'https://github.com/GOWTHI143/spring-petclinic.git'
            }
        }
        stage ('merge') {
            steps {
                sh """git checkout develop
                git pull --all
                git checkout release
                git merge develop --no-ff 
                git push """
            }
        }
    }
}
